{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FE",
            "type": "chrome",
            "request": "launch",
            "urlFilter": "http://localhost:4200*",
            "webRoot": "${workspaceRoot}",
            "sourceMapPathOverrides": {
                "webpack:///D:*": "D:/*"
            }
        },
        {
            "name": "BE",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "protocol": "inspector",
            "restart": "true"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "outFiles": [
                "${workspaceRoot}/out/**/*.js"
            ]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Karma Chrome",
            "address": "localhost",
            "port": 9222,
            "sourceMaps": true,
            "pathMapping": {
                "/": "${workspaceRoot}/febe",
                "/base/": "${workspaceRoot}/febe"
            }
        }
    ]
}